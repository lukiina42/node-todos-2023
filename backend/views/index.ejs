<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="index.css" />
    <title>ToDos!</title>
  </head>
  <body>
    <h1>ToDos!</h1>

    

    <div class="todo-item-wrapper">
      <% if(todos.length === 0){ %>
        <div>Sorry, no todos found</div>
      <% } %>
      <% for (const todo of todos) { %>
      <div class="todo-item">
        <div class="todo-header">
        <div class="todo-title"><%= todo.title %></div>
        <div class="todo-category">
          <%= todo.category %>
        </div>
        </div>
        <div class="todo-links">
          <a href="/detail-todo/<%= todo.id %>"> Detail </a>
          <a href="/toggle-todo/<%= todo.id %>">
            <%= todo.done ? 'Hotovo' : 'Nesplněno' %>
          </a>
          <a href="/remove-todo/<%= todo.id %>"> Odebrat </a>
        </div>
      </div>

    <% } %>
    </div>
  </ul>
  <div class="forms-wrapper">
    <form method="post" action="/new-todo">
      <label for="title">Title</label>
      <input type="text" name="title" id="title">
      <label for="category">Category</label>
      <input type="text" name="category" id="category">
      <button type="submit">Přidat TODO</button>
    </form>

    <form method="GET" action="/" class="filter-category">
      <label for="category">Filtr podle kategorie</label>
      <input type="text" name="category" id="categoryFilter">
      <div>
      <button type="submit">Filtrovat</button>
      <button type="button" onclick="resetForm()">Reset filtr</button>
      </div>
    </form>
    </div>
  </body>

  <script>
    function resetForm() {
      document.getElementById("categoryFilter").value = "";
      document.querySelector(".filter-category").submit();
    }
  </script>
</html>
