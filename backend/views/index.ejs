<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="index.css" />
    <title>ToDos!</title>
  </head>
  <body>
    <h1>ToDos!</h1>

    <div class="todo-item-wrapper">
      <% for (const todo of todos) { %>
      <div class="todo-item">
        <div class="todo-header">
        <div class="todo-title"><%= todo.title %></div>
        <div class="todo-category">
          <%= todo.category %>
        </div>
        </div>
        <div class="todo-links">
          <a href="/detail-todo/<%= todo.id %>"> Detail </a>
          <a href="/toggle-todo/<%= todo.id %>">
            <%= todo.done ? 'Hotovo' : 'Nesplněno' %>
          </a>
          <a href="/remove-todo/<%= todo.id %>"> Odebrat </a>
        </div>
      </div>

    <% } %>
    </div>
  </ul>

    <form method="post" action="/new-todo">
      <label for="title">Title</label>
      <input type="text" name="title" id="title">
      <label for="category">Category</label>
      <input type="text" name="category" id="category">
      <button type="submit">Přidat TODO</button>
    </form>
  </body>
</html>
